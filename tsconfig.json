{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDirs": ["packages", "stories"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "lib": ["es6", "dom"],
    "allowJs": false,
    "baseUrl": "./"
  },
  "include": [
    "packages/**/*",
    "site/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "config",
    "jest",
    "**/*/*.test.ts",
    "lib",
    "dist",
    "example"
  ]
}
