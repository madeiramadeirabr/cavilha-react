{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "lib": ["es6", "dom"],
    "allowJs": false,
    "baseUrl": "./"
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "src",
    "node_modules",
    "build",
    "scripts",
    "config",
    "lib"
  ]
}
